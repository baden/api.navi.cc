{
    "roles":{
        "base_role":{
            "systems":{
                "index":{
                    "access":"allow",
                    "filter_by":{
                        "object_id":1
                    },
                    "allowed_fields":["name", "gasoline", "speed"]
                },
                "login":{
                    "access":"allow"
                }
            }
        },
        "extend_allowed_fields":{
            "systems":{
                "index":{
                    "allowed_fields":["voltage"]
                }
            }
        },
        "denied_fields":{
            "systems":{
                "index":{
                    "denied_fields":["speed"]
                }
            }
        },
        "extend_denied_fields":{
            "systems":{
                "index":{
                    "denied_fields":["voltage", "gasoline"]
                }
            }
        }


    },
    "rules":[
        {
            "type":"user",
            "$id":"uid1",
            "roles":{
                "base_role":1
            },
            "filter_by":{
                "devices":{
                    "$groups":{
                        "all":1
                    }
                }
            }
        },
        {
            "type":"user",
            "$id":"uid2",
            "roles":{
                "base_role":1,
                "extend_allowed_fields":1
            },
            "filter_by":{
                "devices":{
                    "$groups":{
                        "all":1
                    }
                }
            }
        },
        {
            "type":"user",
            "$id":"uid3",
            "roles":{
                "base_role":1,
                "extend_allowed_fields":1,
                "denied_fields":1
            },
            "filter_by":{
                "devices":{
                    "$groups":{
                        "all":1
                    }
                }
            }
        },
        {
            "type":"user",
            "$id":"uid4",
            "roles":{
                "base_role":1,
                "extend_allowed_fields":1,
                "denied_fields":1,
                "extend_denied_fields":1
            },
            "filter_by":{
                "devices":{
                    "$groups":{
                        "all":1
                    }
                }
            }
        }


    ]
}